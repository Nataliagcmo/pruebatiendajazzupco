<style>
.hero {
  background-color: #d94c6a; /* rosado similar al diseño */
  padding: 80px 40px;
}

.hero_container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  gap: 40px;
}

.hero__left {
  color: #fff;
}

.hero__title {
  font-size: 48px;
  font-weight: 700;
  margin: 20px 0;
}

.hero__text {
  font-size: 18px;
  line-height: 1.6;
  max-width: 480px;
}

.hero__actions {
  margin-top: 30px;
  display: flex;
  gap: 20px;
}

.hero_button {
  padding: 14px 26px;
  border-radius: 30px;
  font-weight: 600;
  text-decoration: none;
}

.hero_button--primary {
  background: white;
  color: #d94c6a;
}

.hero_button--secondary {
  color: white;
}

.hero_right {
  display: flex;
  justify-content: center;
}

.hero__product {
  max-width: 100%;
  height: auto;
}
</style>

<section class="hero">
  <div class="hero_container">
    <div class="hero__left">
      <span class="hero_badge"> ★★★★★ Trusted by 50,000+ happy customers </span>

      <h1 class="hero__title">welcome to our store</h1>

      <p class="hero__text">
        From baby's first drops to your daily essentials, Live Wise keeps the whole family nourished, naturally.
      </p>

      <div class="hero__actions">
        <a href="#" class="hero_button hero_button--primary"> Shop now </a>

        <a href="#" class="hero_button hero_button--secondary"> Explore products → </a>
      </div>
    </div>
   <div class="hero_right">
    <img
        src="https://via.placeholder.com/400x500"
        alt="Main product"
        class="hero__product"
        >
    </div>
    
  </div>
</section>

{% schema %}
{
  "name": "Hero Basic",
  "settings": [],
  "presets": [
    {
      "name": "Hero Basic"
    }
  ]
}
{% endschema %}
